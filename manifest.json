
{
  "manifest_version": 3,
  "name": "Crypto Insight Coin Tracker",
  "version": "1.0",
  "description": "Track real-time cryptocurrency prices and trends.",
  "permissions": ["alarms", "notifications", "storage", "activeTab"],
  "host_permissions": ["https://api.coingecko.com/api/v3/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "options_page": "options.html"
}
